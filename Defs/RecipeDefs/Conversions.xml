<?xml version="1.0" encoding="utf-8" ?>

<!-- This file contains the recipes to convert armor between UNSC and Insurgency versions  -->
<Defs>

    <RecipeDef Name="ConvertHaloArmorBase" Abstract="True">
      <recipeUsers>
        <li>MachiningTable</li>
      </recipeUsers>
      <label>Convert UNSC/Innie Armor</label>
      <description>Convert UNSC or Innie Armor to the opposite faction</description>
      <jobString>Converting Armor</jobString>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <workAmount>300</workAmount>
      <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>1</Crafting>
      </skillRequirements>
      <workSkill>Crafting</workSkill>
    </RecipeDef>

    <!-- INSURGENCY -> UNSC -->

    <!-- Regular INS Helmet -> Regular UNSC Helmet -->
    <!-- You would simply copy this block and change the below commentated lines for each piece of armor. -->
    <RecipeDef parentName="ConvertHaloArmorBase">
      <ingredients>
        <li>
          <filter>
            <thingDefs>
              <li>HALO_INS_MarineHelmet_Regular</li> <!-- Change this def to whatever is being converted FROM -->
            </thingDefs>
          </filter>
          <count>1</count>
        </li>
      </ingredients>
      <fixedIngredientFilter>
        <thingDefs>
          <li>HALO_INS_MarineHelmet_Regular</li> <!-- Change this def to whatever is being converted FROM -->
        </thingDefs>
      </fixedIngredientFilter>
      <products>
        <HALO_UNSC_MarineHelmet_Regular>1</HALO_UNSC_MarineHelmet_Regular> <!-- Change this def to whatever is being converted TO (becoming this) -->
      </products>
    </RecipeDef> 

    <!-- Marksman INS Helmet -> Marksman UNSC Helmet -->
    <RecipeDef parentName="ConvertHaloArmorBase">
      <ingredients>
        <li>
          <filter>
            <thingDefs>
              <li>HALO_INS_MarineHelmet_Marksman</li>
            </thingDefs>
          </filter>
          <count>1</count>
        </li>
      </ingredients>
      <fixedIngredientFilter>
        <thingDefs>
          <li>HALO_INS_MarineHelmet_Marksman</li>
        </thingDefs>
      </fixedIngredientFilter>
      <products>
        <HALO_UNSC_MarineHelmet_Marksman>1</HALO_UNSC_MarineHelmet_Marksman>
      </products>
    </RecipeDef> 

</Defs>